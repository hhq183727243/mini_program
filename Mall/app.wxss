/**app.wxss**/
@import "styleSheets/public.wxss";
@import "styleSheets/weui.wxss";

page{
  font-size: 14px;
  background-color: #FBF8FF;
  color: #444;
}
input{ min-height: 0; }
image{ vertical-align:bottom; }
.container {
  margin-left: 10px;
  margin-right: 10px; 
}

.bottom-line,
.top-line{ position: relative; }
.bottom-line:after {
	content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #E5E5E5;
    color: #E5E5E5;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.top-line:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #E5E5E5;
    color: #E5E5E5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.footer-kong{width: 100%; height: 50px;}

/* 底部导航 */
.bottom_nav{
    position: fixed;
    bottom: 0px;
    left: 0;
    width: 100%;
    background-color: #F7F7FA;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.bottom_nav:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #C0BFC4;
    color: #C0BFC4;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.bottom_nav_item{ 
    flex: 1;
    padding-top: 5px;
    text-align: center;
}
.icon_img{ width:27px; height: 27px; vertical-align: top; }
.icon_text{ 
    position: relative;
    font-size: 12px; 
    color: #666; 
    line-height: 1.8;
}


.media_title{
	max-height: 40px;
	height: 40px;
	overflow: hidden;
	text-overflow:ellipsis;
	display:-webkit-box;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;

}

/* 必填 * 展示 */
.required{
	position: absolute;
	left: -10px;
}

/* 点击加深背景色 */
.bg-dark{
	background-color: #f0f0f0;
}

.aic{
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}


.delete-price{ text-decoration: line-through; color: #999;}

/* 授权按钮 */
.get-userinfo-btn{
	z-index: 9;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
}