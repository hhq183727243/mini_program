
.view-empty{
	width: 750rpx;
	height: 650rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.view-empty .empty_cart_wrap{
	background-color: #f0f0f0;
	border-radius: 50%;
	padding: 30rpx;
}
.view-empty image{
	width: 150rpx;
	height: 150rpx;
}

/*商品加减按钮*/
/*stepper容器*/
.stepper {
	border: 1px solid #ccc;
	border-radius: 3px;
}


/*加号与减号*/
.stepper text {
	width: 30px;
	line-height: 24px;
	text-align: center;
	float: left;
}

/*数值*/
.stepper input {
	color: black;
	float: left;
	margin: 0 auto;
	width: 40px;
	height: 24px;
	line-height: 24px;
	min-height: 24px;
	text-align: center;
	font-size: 12px;
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}

/*普通样式*/
.stepper .normal{ color: black; }

/*禁用样式*/
.stepper .disabled{ color: #ccc; }

/*底部按钮*/
.carts-footer {
	width: 100%;
	height: 50px;
	position: fixed;
	bottom: 0;
	background: white;
}

/*复选框*/
.carts-footer icon {
	float: left;
	margin-left: 15px;
	margin-right: 8rpx;
}

/*立即结算按钮*/
.carts-footer .button {
	float: right;
	line-height: 50px;
	text-align: center;
	width:220rpx;
	height: 50px;
	background-color: #e64340;
	color: white;
	font-size: 36rpx;
	border-radius: 0;
	border: 0;
}
