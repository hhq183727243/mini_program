/* 选择商品属性 */
.goods-attr{
	z-index: 9;
	position: fixed;
	top: 0;
	left: 0;
	bottom: 0;
	width: 100%;
}
.goods-attr-mask{
	z-index: 1;
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	width: 100%;
	background-color: rgba(0, 0, 0, 0.7);
}
.goods-attr-inner{
	z-index: 2;
	position:absolute;
	bottom:0;
	width:100%;
	background-color: #fff;
}
.goods-cover{
	position: relative;
	top: -15px;
	width: 70px;
	height: 70px;
	border-radius: 5px;
}
.next-btn{ border-radius: 0;}