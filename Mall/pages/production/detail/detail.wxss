/*商品加减按钮*/
/*stepper容器*/
.stepper {
	border: 1px solid #ccc;
	border-radius: 3px;
}

/*加号与减号*/
.stepper text {
	width: 30px;
	line-height: 24px;
	text-align: center;
	float: left;
}

/*数值*/
.stepper input {
	color: black;
	float: left;
	margin: 0 auto;
	width: 40px;
	height: 24px;
	line-height: 24px;
	min-height: 24px;
	text-align: center;
	font-size: 12px;
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}

/*普通样式*/
.stepper .normal{ color: black; }

/*禁用样式*/
.stepper .disabled{ color: #ccc; }

.footer {
	z-index: 8;
	background: #f8f8f8;
	width: 100%;
	display: flex; 
	flex-direction: row; 
	justify-content: space-between;
	position: fixed;
	bottom: 0;
}

.footer-item{
	width: 100rpx;
	height: 50px;
	display: flex;
	flex: 1;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	border-right-color: #eee;
	border-right-style: solid;
	border-right-width: 2rpx;
}
.footer-item image{
	width: 50rpx;
	height: 50rpx;
	
}

.footer-item text{
	color: #666;
	font-size: 12px;
	margin-top: 5rpx;
}

