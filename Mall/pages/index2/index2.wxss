/**index.wxss**/
swiper{
	height: 140px;
}

swiper image{ 
	width: 100%;
	height: 100%; 
}

.kuaisu-rukou{
	background-color: #fff;
}
.ks-item{
	padding: 10px;
	text-align: center;
	color: #666;
}

.ks-icon{
	width: 50px;
	height: 50px;
	margin: 0 auto;
	background-image: url('http://xm.juz580.com/themes/default/static/images/tool_img.jpg');
	background-repeat: no-repeat;
	background-size: 150px 100px; 
}
.ks-icon-1{ background-position: 0 0; }
.ks-icon-2{ background-position: -50px 0; }
.ks-icon-3{ background-position: -100px 0; }
.ks-icon-4{ background-position: 0 -50px; }
.ks-icon-5{ background-position: -50px -50px; }
.ks-icon-6{ background-position: -100px -50px; }

.section-title{
	text-align:center;
	padding:8px 10px;
	background:#e64340;
	color:#fff;
	font-size:18px;

}

.demo-item{
	margin-bottom: 10px;
}
.demo-item image{
	width: 100%;
	height: 160px;
}
.demo-txt{
	padding: 4px 6px;
	border-left: 5px solid #e64340;
}
.demo-txt .title{ font-size: 16px; }
.demo-txt .info{ font-size: 12px; margin-top: 4px; color: #999; }
.demo-item .btn{
	line-height: 50px;
	text-align: center;
	height: 50px;
	background-color: #e64340;
	color: white;
	font-size: 16px;
	padding: 0 10px;
}