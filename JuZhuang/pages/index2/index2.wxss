/* pages/index2/index2.wxss */
.head{
	background-color: #f30213;
	text-align: center;
	padding-bottom: 10px;
}

.head image{ width: 140px; height: 60px; }
.search-view{
	width: 640rpx;
	height: 32px;
	background-color: #fff;
	border-radius: 32px;
	margin: 10px auto 0;
	text-align: center;
	line-height: 32px;
}

.kuaisu-rukou{
	background-color: #fff;
}
.ks-item{
	padding: 10px;
	text-align: center;
	color: #666;
}

.ks-icon{
	width: 50px;
	height: 50px;
	margin: 0 auto;
	background-image: url('http://xm.juz580.com/themes/default/static/images/tool_img.jpg');
	background-repeat: no-repeat;
	background-size: 150px 100px; 
}
.ks-icon-1{ background-position: 0 0; }
.ks-icon-2{ background-position: -50px 0; }
.ks-icon-3{ background-position: -100px 0; }
.ks-icon-4{ background-position: 0 -50px; }
.ks-icon-5{ background-position: -50px -50px; }
.ks-icon-6{ background-position: -100px -50px; }

.section-title{
	padding:10px 15px;
	border-bottom:2px solid #e64340;
	color:#e64340;
}

.scroll-view_H{
	height: 120px;
	white-space: nowrap;
}

.demo-item{ position: relative; width: 60%; display: inline-block; margin-left: 10px; }
.demo-item:first-child{ margin-left: 0; }
.demo-item image{ width: 100%; height: 120px;  }
.demo-item .demo-info{
	position: absolute;
	left: 0;
	bottom: 0;
	right: 0;
	padding:6px 8px;
	background-color: rgba(0, 0, 0, 0.7);
	color: #fff;
}
.scroll-view-item_H{
	height: 100%;
}