/* pages/pic/pic.wxss */
page{
	height: 100%;
}

.head{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	z-index: 99;
}

.weui-tab__panel{ 
	background-color: rgba(0, 0, 0, 0.5)
}
.weui-navbar + .weui-tab__panel {
	padding-top:42px;
}

.weui-tab__panel.h-auto,
.weui-tab.h-auto{ height: auto; }

.ks-item{
	position: relative;
	text-align: center;
	line-height: 42px;
	font-size: 12px;
}
.ks-item.active{ color: #f30213; }

.ks-item:before {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid #D9D9D9;
    color: #D9D9D9;
    -webkit-transform-origin: 100% 0;
    transform-origin: 100% 0;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
}

.weui-flex__item:last-child .ks-item:before {
	content: none;
}

.p-item{
	padding: 5px;
}

.p-item .p-item-pic{ width: 100%; height: 200rpx; background-color: #fff; }
.p-item .icon{ width: 16px; height: 16px; margin-right: 5px; }

.body{
	padding: 3px;
	padding-top: 87px;
}

/* 商家logo */
.seller-logo{
	width: 20px;
	height: 20px;
	background-color: #fff;
	border-radius: 50%;
	margin-right: 5px;
}
