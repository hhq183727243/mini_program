@import "../selectAddress/selectAddress.wxss";

page{ background-color: #fff; }

.ad-banner{ width: 100%; height: 175rpx; }

.calc-form{
	border: 1px solid #E4E4E4;
	border-radius: 16px;
	box-shadow: 1px 5px 8px 2px #BAB9B9;
}
.yusuan{
    position: relative;
    margin-bottom: 8px;
    color: #383f59;
	text-align: center;
}
.yusuan:before,
.yusuan:after{
    position: absolute;
    top: 10px;
    width: 21%;
    height: 1px;
    content: ' ';
    border-top: 1px solid #E3E3E3;
}
.yusuan:before{
    left: 18px;
}
.yusuan:after{
    right: 18px;
}

.num-frame {
	position: relative;
	height: 72px;
	margin: 0 auto;
	border: 6px solid #D2D1D1;
	box-sizing: border-box;
}

.num-window {
	height: 100%;
	padding-right: 28px;
	padding-top: 10px;
	border-top: 2px solid #3D3C30;
	border-bottom: 2px solid #6C6B60;
	border-left: 3px solid #3D3C30;
	border-right: 3px solid #3D3C30;
	background-color: #D3D3CB;
	box-shadow: 0px 1px 5px 1px #ABABA5 inset;
	box-sizing: border-box;
	text-align: right;
}
.num-window image{
	width: 20px;
	height: 40px;
	margin-left: 5px;
}
.num-frame .yuan {
	position: absolute;
	width: 16px;
	height: 16px;
	line-height: 16px;
	right: 12px;
	bottom: 6px;
}

.result-queson {
	line-height: 25px;
	border: 1px solid #e7e7e7;
	margin-top: -1px;
	padding: 10px;
	text-align: center;
}

.zxd-form .weui-cells{ margin-top: 10px;}

.m_from{
	width: 100%;
	height: 980rpx;
}