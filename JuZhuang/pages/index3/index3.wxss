/**index.wxss**/
swiper{
	height: 376rpx;
}

swiper image{ 
	width: 100%;
	height: 100%; 
}

.bao-jia{
	height: 66px;
	position: relative;
	background: #F7F3F2;
	border-radius: 5px;
	padding: 8px;
	box-sizing: border-box;
}
.bao-jia .txt{
	font-size: 18px;
	margin-right: 5px;
}
.bao-jia .icon{
	display: inline-block;
	padding: 0 5px;
	border-radius: 20px 20px 20px 0;
	background-color: #FF8B00;
	text-align: center;
	color: #fff;
	font-size: 12px;
}
.zxth-warp{
	height: 137px; 
}
.zxth{
	position: absolute;
	width: 200rpx; 
	height: 150rpx;
	bottom: 0;
	left: 6px;
}
.mfbj{
	z-index: 0;
	position: absolute;
	width: 100rpx; 
	height: 90rpx;
	top: 0;
	right: 0px;
}
.mfsj{
	z-index: 0;
	position: absolute;
	width: 160rpx; 
	height: 70rpx;
	bottom: 0;
	right: 0px;
}

.weui-navbar:after{ content: none;}

.section-title{
	padding:8px 10px;
	font-size:16px;
}


.scroll-view_H{
	margin-top: 5px;
	height: 300rpx;
	white-space: nowrap;
}

.ad-logo{
	width:136px;
	height:60px;
}

.demo-item{ 
	position: relative;
	width: 60%; 
	height: 300rpx; 
	display: inline-block; 
	margin-left: 10px; 
	border-radius: 5px;
	overflow:hidden;
}
.demo-item:first-child{ margin-left: 0; }
.demo-item image{ 
	width: 100%; 
	height: 100%; 
	background-color: #fff;
}
.demo-item .demo-info{
	position: absolute;
	left: 0;
	top: 0;
	bottom: 0;
	right: 0;
	padding:6px 8px;
	line-height:280rpx;
	background-color: rgba(0, 0, 0, 0.3);
	color: #fff;
}