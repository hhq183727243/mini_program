/* pages/pic/detail/detail.wxss */
page{
	height: 100%;
	background-color: #222;
}

.slide-image{
	width: 100%;
	height: 100%;
}

.icon{ width: 20px; height: 20px; margin-right: 5px; }

/*立即结算按钮*/
.weui-tabbar::before{
	content: none
}
.weui-tabbar .button {
	line-height: 50px;
	text-align: center;
	width:100%;
	height: 50px;
	background-color: #f0f0f0;
	color: white;
	font-size: 40rpx;
	border-radius: 0;
	border: 0;
}
.weui-tabbar .button.primary{
	background-color:#1AAD19;
}

.weui-tabbar .button.warn{
	background-color: #e64340;
}

.font{
	display:inline-block;
	padding:0 5px;
	border-radius:20px 20px 20px 0;
	background-color:#FF8B00;
	text-align:center;
	color:#fff;
	font-size:12px;
	line-height: 18px;
}
/* 商家logo */
.seller-logo{
	width: 20px;
	height: 20px;
	background-color: #fff;
	border-radius: 50%;
	margin-right: 5px;
}

/* 案例信息 */
.product-info,
.product-title{
	position: absolute;
	bottom: 50px;
	left: 0;
	right: 0;
	background-color: rgba(0, 0, 0, 0.5);
}

.product-title{
	top:0;
	bottom: auto;
}

.get-userinfo-btn{
	z-index: 9;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
}
